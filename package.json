{
  "name": "poplar",
  "version": "0.0.1",
  "description": "Electron menubar app for controlling a wemo device",
  "main": "index.js",
  "scripts": {
    "copy-deps": "cp -r node_modules/font-awesome/fonts app/ && cp -f node_modules/font-awesome/css/font-awesome.{min.css,css.map} app/css/",
    "prebuild": "npm run copy-deps",
    "build": "electron-packager . WemoMenubar --platform=darwin --arch=x64",
    "prestart": "npm run copy-deps",
    "start": "electron ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryexley/poplar.git"
  },
  "author": "Bob Yexley",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ryexley/poplar/issues"
  },
  "homepage": "https://github.com/ryexley/poplar#readme",
  "dependencies": {
    "electron-rpc": "^2.0.1",
    "font-awesome": "^4.7.0",
    "lodash": "^4.17.4",
    "menubar": "^5.2.3",
    "wemo-client": "^0.11.2"
  },
  "devDependencies": {
    "electron": "^1.4.15",
    "electron-packager": "^8.5.1"
  }
}
